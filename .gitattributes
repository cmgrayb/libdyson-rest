# Set default behavior to automatically normalize line endings
* text=auto

# Force LF line endings for these file types to ensure cross-platform compatibility
*.py text eol=lf
*.toml text eol=lf
*.yaml text eol=lf
*.yml text eol=lf
*.json text eol=lf
*.md text eol=lf
*.txt text eol=lf
*.cfg text eol=lf
*.ini text eol=lf
*.sh text eol=lf

# Ensure Windows batch files have CRLF line endings
*.bat text eol=crlf
*.cmd text eol=crlf

# Binary files should not be processed
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.whl binary
*.egg binary

# Treat these as binary to avoid line ending conversion
*.pyc binary
*.pyo binary
*.pyd binary
